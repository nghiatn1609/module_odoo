<odoo>

    <record model="ir.module.category" id="module_category_open_academy">
        <field name="name">OpenAcademy</field>
        <field name="description">Helps you to manage the academy.</field>
        <field name="sequence">10</field>
    </record>

    <record id="only_responsible_can_modify" model="ir.rule">
        <field name="name">Only Responsible can modify Course</field>
        <field name="model_id" ref="model_open_academy_course"/>
        <field name="groups" eval="[(4, ref('open__academy.group_open_academy_manager'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
        <field name="domain_force">
            ['|', ('responsible_id','=',False),
                  ('responsible_id','=',user.id)]
        </field>
    </record>
    
    <record id="only_student_can_modify" model="ir.rule">
        <field name="name">Only Student can see Course</field>
        <field name="model_id" ref="model_open_academy_course"/>
        <field name="groups" eval="[(4, ref('open__academy.group_open_academy_student'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="0"/>
        <field name="domain_force">
            ['|', ('responsible_id','=',False),
                  ('responsible_id','=',user.id)]
        </field>
    </record>

</odoo>



