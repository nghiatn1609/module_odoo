<odoo>
  <data>
    <!-- Session -->
    <!-- tree -->
    <record id="open_academy_view_tree_session" model="ir.ui.view">
      <field name="name">open_academy.view.tree</field>
      <field name="model">open_academy.session</field>
      <field name="arch" type="xml">
        <tree string="Session Tree" decoration-info="duration&lt;5" decoration-it="duration&gt;16" 
        decoration-bf="duration&gt;16"  decoration-danger="duration&gt;15"    >
          <field name="name"></field>
          <field name="course_id"></field>
          <field name="start_date"></field>
          <field name="duration"></field>
          <field name="seats"></field>
          <field name="instructor_id"></field>
          <field name="attendees_ids"></field>
          <field name="taken_seats" widget= "progressbar"></field>
          <field name="active"></field>
        </tree>
      </field>
    </record>
    <!-- form -->
    <record id="open_academy_view_form_session" model="ir.ui.view">
      <field name="name">open_academy.view.form</field>
      <field name="model">open_academy.session</field>
      <field name="arch" type="xml">
        <form string="Schedule">
          <header>
            <button name="action_cf" string="Action Button" type="object"/>
            <button name="_get_report_values" string="Report Button" type="object"/>
          </header>
          <sheet>
            <group>
              <field name="name"></field>
              <field name="course_id"></field>
              <field name="start_date"></field>
              <field name="duration"></field>
              <field name="seats"></field>
              <field name="instructor_id"></field>
              <field name="attendees_ids"></field>
              <field name="taken_seats"></field>
              <field name="active"></field>
            </group>
          </sheet>
        </form>
      </field>
    </record>
    <!-- calender -->
    <record id="open_academy_view_calendar" model="ir.ui.view">
      <field name="name">open_academy.view.calendar</field>
      <field name="model">open_academy.session</field>
      <field name="arch" type="xml">
        <calendar string="Session Calendar" date_start="start_date" date_stop="date_end" color="instructor_id">
          <field name="name"/>
          <field name="course_id"></field>
        </calendar>
      </field>
    </record>
    <!-- gantt, gantt view 0 thể chạy được với community edition-->
    <record id="open_academy_view_gantt" model="ir.ui.view">
      <field name="name">open_academy.view.gantt</field>
      <field name="model">open_academy.session</field>
      <field name="arch" type="xml">
        <gantt string="Session Gantt"
                date_start="start_date"
                date_stop="date_end"
                default_group_by='instructor_id'>
        </gantt>
      </field>
    </record>
    <!-- pivot -->
    <record id="open_academy_view_pivot" model="ir.ui.view">
      <field name="name">open_academy.view.pivot</field>
      <field name="model">open_academy.session</field>
      <field name="arch" type="xml">
        <pivot string="Participations by Courses">
          <field name="attendees_count" type="col"/>
          <field name="course_id" type="row"/>
        </pivot>
      </field>
    </record>
    <!-- graph, xem thêm thông tin ở https://www.odoo.com/documentation/16.0/developer/reference/backend/views.html -->
    <record id="open_academy_view_graph" model="ir.ui.view">
      <field name="name">open_academy.view.graph</field>
      <field name="model">open_academy.session</field>
      <field name="arch" type="xml">
        <graph string="Participations by Courses" type="line">
          <field name="course_id"/>
          <field name="attendees_count" type="measure"/>
        </graph>
      </field>
    </record>
    <!-- cần tìm ra các stack hoặc cái loại type khác  -->
    <record id="open_academy_view_kanban" model="ir.ui.view">
      <field name="name">open_academy.view.kanban</field>
      <field name="model">open_academy.session</field>
      <field name="arch" type="xml">
        <kanban default_group_by="course_id">
          <field name="color"/>
          <templates>
            <t t-name="kanban-box">
              <div t-attf-class="oe_kanban_color_{{kanban_getcolor(record.color.raw_value)}}
                        oe_kanban_global_click_edit oe_semantic_html_override
                        oe_kanban_card {{record.group_fancy==1 ? 'oe_kanban_card_fancy' : ''}}">
                <div class="oe_dropdown_kanban">
                  <!-- dropdown menu -->
                  <div class="oe_dropdown_toggle">
                    <i class="fa fa-bars fa-lg" title="Manage" aria-label="Manage"/>
                    <ul class="oe_dropdown_menu">
                      <li>
                        <a type="delete">Delete</a>
                      </li>
                      <li>
                        <ul class="oe_kanban_colorpicker"
                                                data-field="color"/>
                      </li>
                    </ul>
                  </div>
                  <div class="oe_clear"></div>
                </div>
                <div t-attf-class="oe_kanban_content">
                  <!-- title -->
                                Session name:
                  <field name="name"/>
                  <br/>
                                Start date:
                  <field name="start_date"/>
                  <br/>
                                duration:
                  <field name="duration"/>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>
    <!-- actions opening views on models for Session-->
    <record model="ir.actions.act_window" id="session_list_action">
      <field name="name">Sessions</field>
      <field name="res_model">open_academy.session</field>
      <field name="view_mode">tree,form,calendar,gantt,graph,pivot,kanban</field>
    </record>
  </data>
</odoo>