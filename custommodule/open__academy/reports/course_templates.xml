<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="course_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h1>Khóa Học - <t t-esc="doc.title"/></h1>
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Tên</th>
                                    <th>Seats</th>
                                    <th>Giảng viên</th>
                                    <th>Taken Seats</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="doc.session_ids" t-as="session">
                                    <td><t t-esc="session.name"/></td>
                                    <td><t t-esc="session.seats"/></td>
                                    <td><t t-esc="session.instructor_id.name"/></td>
                                    <td><t t-esc="session.taken_seats"/></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>