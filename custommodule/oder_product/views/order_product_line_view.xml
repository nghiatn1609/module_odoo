<odoo>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="oder_product.line_tree">
            <field name="name">Oder Product Line list</field>
            <field name="model">purchase.request.line</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="request_id"/>
                    <field name="product_id"/>
                    <field name="uom_id"/>
                    <field name="qty"/>
                    <field name="total"/>
                </tree>
            </field>
        </record>
        
        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="oder_product_line">
            <field name="name">Oder Product Line</field>
            <field name="res_model">purchase.request.line</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
